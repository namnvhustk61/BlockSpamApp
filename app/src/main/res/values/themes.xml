<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BlockSpam" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_start</item>
        <item name="colorPrimaryVariant">@color/gradient_end</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorSecondaryVariant</item>
        <item name="colorOnBackground">@color/colorSecondaryVariant</item>


        <!-- Status bar color. -->
    </style>
    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" >@color/background</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/background_item</item>
        <item name="android:windowBackground">@drawable/splash_background</item>


        <item name="android:itemBackground">@color/background</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:popupElevation">@dimen/dp_15</item>

    </style>

    <style name="BottomSheetBackgroundWhite" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@color/transaction</item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/background_item</item>
    </style>

    <style name="ThemeAccept" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" >@color/green_blur</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/green_blur</item>
        <item name="android:windowBackground">@color/green_blur</item>

        <item name="android:itemBackground">@color/background</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:popupElevation">@dimen/dp_15</item>
    </style>
</resources>