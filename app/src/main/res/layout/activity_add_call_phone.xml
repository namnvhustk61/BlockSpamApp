<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.addcallphone.AddCallPhoneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:gravity="center_vertical"
        >

        <com.stork.viewcustom.radius.ImageViewRadius
            android:id="@+id/imgBack"
            android:layout_width="@dimen/size_icon_30dp"
            android:layout_height="@dimen/size_icon_30dp"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_back"
            app:radius="@dimen/size_icon_x2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/svn_gilroy_medium"
            android:text="@string/add_phone_title"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_22"
            android:textColor="@color/text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/svn_gilroy_medium"
            android:text="@string/add_phone_title"
            tools:ignore="RelativeOverlap" />

        <com.stork.viewcustom.general.TextViewAction
            android:id="@+id/tvBtnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imgMenu"
            android:fontFamily="@font/svn_gilroy_medium"
            android:text="@string/save"
            android:layout_marginEnd="@dimen/dp_10"
            tools:ignore="RelativeOverlap" />


        <com.stork.viewcustom.radius.ImageViewRadius
            android:id="@+id/imgMenu"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/size_icon"
            android:layout_height="@dimen/size_icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu"
            app:radius="@dimen/size_icon_x2"
            />


    </RelativeLayout>

    <com.stork.viewcustom.radius.LinearLayoutRadius
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_item"
        android:layout_margin="@dimen/dp_8"
        android:padding="@dimen/dp_8"
        app:radius="@dimen/dp_15"
        app:offStateOnPressed="true"
        >

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_call_phone_edt_phone"
            android:inputType="phone"
            android:textColorHint="@color/hint"
            android:fontFamily="@font/svn_gilroy_medium"
            android:textColor="@color/text_less"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_call_phone_edt_name"
            android:textColorHint="@color/hint"
            android:fontFamily="@font/svn_gilroy_light"
            android:textColor="@color/text_less"/>

    </com.stork.viewcustom.radius.LinearLayoutRadius>



</LinearLayout>