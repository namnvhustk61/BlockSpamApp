<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="TextViewGradient">
        <attr name="colorStart" format="color" />
        <attr name="colorEnd" format="color" />
    </declare-styleable>

    <declare-styleable name="RadiusLayout">
        <attr name="backgroundColor" />
        <attr name="radius" format="dimension"/>
        <attr name="radiusTopLeft" format="dimension"/>
        <attr name="radiusTopRight" format="dimension"/>
        <attr name="radiusBottomLeft" format="dimension"/>
        <attr name="radiusBottomRight" format="dimension"/>
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
        <attr name="offStateOnPressed" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TabBarView">
        <attr name="title" />
        <attr name="activeIcon" format="reference" />
        <attr name="inactiveIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="drag_edge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>
        <attr name="leftEdgeSwipeOffset" format="dimension" />
        <attr name="rightEdgeSwipeOffset" format="dimension" />
        <attr name="topEdgeSwipeOffset" format="dimension" />
        <attr name="bottomEdgeSwipeOffset" format="dimension" />
        <attr name="show_mode" format="enum">
            <enum name="lay_down" value="0" />
            <enum name="pull_out" value="1" />
        </attr>
        <attr name="clickToClose" format="boolean" />
    </declare-styleable>


<!--    Show Loading -->
    <declare-styleable name="DotsLoaderBaseView">
        <attr name="loader_defaultColor" format="color" />
        <attr name="loader_selectedColor" format="color" />
        <attr name="loader_circleRadius" format="dimension" />
        <attr name="loader_animDur" format="integer" />
        <attr name="loader_showRunningShadow" format="boolean" />
        <attr name="loader_firstShadowColor" format="color" />
        <attr name="loader_secondShadowColor" format="color" />
    </declare-styleable>
    <declare-styleable name="LinearDotsLoader">
        <attr name="loader_noOfDots" format="integer" />
        <attr name="loader_dotsDist" format="dimension" />
        <attr name="loader_isSingleDir" format="boolean" />
        <attr name="loader_expandOnSelect" format="boolean" />
        <attr name="loader_selectedRadius" format="dimension" />
    </declare-styleable>

    <style name="LoadingView">
        <item name="android:windowMinWidthMajor">100%</item>
    </style>

</resources>